<div class=" man-woman-img">

    <div class="box">

        {{#if isMale}}

        <h1 class="gender"> HOMME</h1>
        {{else}}
        <h1 class="gender"> FEMME</h1>
        {{/if}}
    </div>


</div>

<div class="filter-sort">
    <div class="filter">
        <div class="filter-button">
            <p>FILTER par</p>
